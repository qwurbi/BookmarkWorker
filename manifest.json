{
  "manifest_version": 3,
  "name": "Bookmark Manager Pro",
  "version": "1.0.0",
  "description": "Управление закладками и заметками",
  "permissions": [
    "bookmarks",
    "identity",
    "storage"
  ],
  "oauth2": {
    "client_id": "ваш-client-id.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email"
    ]
  },
  "action": {
    "default_popup": "/src/views/menu/popup.html"
  },
  "options_page": "/src/views/app/app.html",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}